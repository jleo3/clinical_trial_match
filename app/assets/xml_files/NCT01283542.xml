  <start_date>November 2012</start_date>
  <completion_date type="Anticipated">November 2014</completion_date>
  <primary_completion_date type="Anticipated">November 2014</primary_completion_date>
  <phase>Phase 2</phase>
  <study_type>Interventional</study_type>
  <study_design>Allocation: Non-Randomized, Intervention Model: Single Group Assignment, Masking: Open Label, Primary Purpose: Treatment</study_design>
  <primary_outcome>
    <measure>Proportion of patients with non-functioning pituitary adenomas (NFPA) who achieve tumor volume reduction of at least 20% after 24-week treatment with pasireotide LAR</measure>
    <time_frame>24 weeks</time_frame>
    <safety_issue>Yes</safety_issue>
  </primary_outcome>
  <primary_outcome>
    <measure>Mean change of tumour volume assessed by pituitary MRI</measure>
    <time_frame>from baseline to week 4, 12 and 24</time_frame>
